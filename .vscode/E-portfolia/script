document.addEventListener("DOMContentLoaded", () => {
  const container = document.getElementById("slidein");

  const observer = new IntersectionObserver(
    (entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("is-visible");
          observer.unobserve(entry.target);
        }
      });
    },
    {
      root: null,        // viewport
      threshold: 0.70    // 70% of element visible
    }
  );

  observer.observe(container);
  // Second observer for the second container
  const container2 = document.getElementById("slidein2");

  const observer2 = new IntersectionObserver(
    (entries, observer2) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add("is-visible");
          observer2.unobserve(entry.target);
        }
      });
    },
    {
      root: null,        // viewport
      threshold: 0.70    // 70% of element visible
    }
  );

  observer2.observe(container2);
});